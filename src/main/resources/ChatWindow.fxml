<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bamsemats.dotatranslator.ChatWindowController"
      stylesheets="@chat_style.css">
   <children>
      <HBox spacing="10">
         <Button fx:id="reselectRegionButton" onAction="#handleReselectRegion" text="Re-select Chat Region" HBox.hgrow="ALWAYS" />
         <Button fx:id="saveChatLogButton" onAction="#handleSaveChatLog" text="Save Chat Log" HBox.hgrow="ALWAYS" />
         <Button fx:id="scanChatButton" onAction="#handleScanChat" text="Scan Chat" HBox.hgrow="ALWAYS" />
      </HBox>
      <ListView fx:id="chatListView" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
